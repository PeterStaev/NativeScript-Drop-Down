{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "bin/dist",
        "lib": ["es2017", "dom"],
        "rootDir": ".",
        "baseUrl": ".",
        "plugins": [{
          "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
          "type": "raw"
        }],
        "paths": {
            "*": [
            "./node_modules/@nativescript/core/*",
            "./node_modules/*"
            ]
        },
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "demo",
        "demo-ng",
        "demo-ng-bak",
        "bin",
        "angular"
    ],
    "compileOnSave": false
}
