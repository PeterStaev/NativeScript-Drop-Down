{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"command": "grunt",
	"args": [
		"--no-color"
	],
	
	"tasks": [
		{
			"label": "build",
			"type": "grunt",
			"task": "--no-color",
			"problemMatcher": [
				"$tsc",
				{
					"base": "$tslint4",
					"fileLocation": "relative"
				}
			],
			"group": {
				"_id": "build",
				"isDefault": false
			}
		}
	]
}